<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="MauScan.KozelDesitka">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<ScrollView Grid.Row="0">
			<cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True"
			               BarcodeDetected="cameraView_BarcodeDetected"/>

		</ScrollView>

		<Label x:Name="barcodeResult" FontSize="20" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Margin="0, 10, 0, 0"/>

		<StackLayout Grid.Row="2" Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" Margin="10, 0, 10, 10">

		</StackLayout>
	</Grid>

</ContentPage>